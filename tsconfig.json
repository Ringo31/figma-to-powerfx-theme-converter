{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "baseUrl": "./",
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["esnext"],
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src/**/*.ts",
    "./*.ts"
  ]
}